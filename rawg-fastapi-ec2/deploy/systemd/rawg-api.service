[Unit]
Description=RAWG FastAPI (gunicorn+uvicorn)
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/rawg-api
EnvironmentFile=/opt/rawg-api/.env
ExecStart=/opt/rawg-api/.venv/bin/gunicorn -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000 --workers 2 --timeout 60
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
